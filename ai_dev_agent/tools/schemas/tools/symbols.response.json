{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "symbols": {
      "type": "array",
      "description": "List of symbol definitions",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Symbol name"
          },
          "file": {
            "type": "string",
            "description": "File containing the symbol"
          },
          "pattern": {
            "type": "string",
            "description": "Pattern or line where symbol is defined"
          },
          "kind": {
            "type": "string",
            "description": "Symbol type (function, class, variable, etc.)"
          },
          "line": {
            "type": ["integer", "null"],
            "description": "Line number if available"
          }
        },
        "required": ["name", "file", "pattern", "kind"],
        "additionalProperties": false
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if search failed"
    }
  },
  "required": ["symbols"],
  "additionalProperties": false
}
